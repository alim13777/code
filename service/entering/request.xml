<services>

    <service verb="create" noun="enteringCorrection" type="script"
             location="component://core/service/entering/request.groovy" method="create_correction">
        <implements service="base.BaseService"/>
        <in-parameters>
            <parameter name="requestId"/>
            <parameter name="description" default=""/>
            <parameter name="date"/>
            <parameter name="startTime"/>
            <parameter name="endTime"/>
        </in-parameters>
